
@{
    ViewBag.Title = "map";
}

<style>
    .mapImg {
        background-image: url(/App_Data/export-map-share.png);
        width: 100%;
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
    }


    #myCanvas {
        width: 100%;
        height: 100%;
    }
</style>


<div class="mapImg" id="d">
    <canvas id="myCanvas"></canvas>
</div>



<script>
    var canvas = document.getElementById("myCanvas");
    var ctx = canvas.getContext("2d");
    var lat, lon

    var IntervalTime = @Session["time"] * 1000
    var prevLat, prevLon
    var x, y

    $.getJSON("@Url.Action("GetLanLot")").done(function (data) {
        lon = ((data.x + 180) / 360) * canvas.width;
        lat = ((data.y + 90) / 180) * canvas.height;
        prevLon = lon;
        prevLat = lat;

        ctx.beginPath();
        ctx.fillStyle = "#000080";
        ctx.arc(lon, lat, 2, 0, 2 * Math.PI, true);
        ctx.fill();
        ctx.beginPath();
        ctx.fillStyle = "red";
        ctx.arc(lon, lat, 1, 0, 2 * Math.PI, true);
        ctx.fill();

        ctx.lineWidth = 1;
        ctx.strokeStyle = "red";
        ctx.beginPath();
        ctx.moveTo(lon, lat);
        x = lon
        y = lat

        myTimer = (function () {
            $.getJSON("@Url.Action("GetLanLot")").done(function (data) {

                lon = ((data.x + 180) / 360) * canvas.width;
                lat = ((data.y + 90) / 180) * canvas.height;
                if (prevLat != lat && prevLon != lon) {
                    if (lon - prevLon > 0) {
                        x += 0.2;
                    }
                    else {
                        x -= 0.2;
                    }
                    if (lat - prevLat > 0) {
                        y += 0.2;
                    }
                    else {
                        y -= 0.2;
                    }
                    ctx.lineTo(x, y);
                    ctx.stroke();
                    prevLat = lat;
                    prevLon = lon;
                }
            });
        
        });
        setInterval(myTimer, IntervalTime);
    });
</script>